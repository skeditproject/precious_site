<section class="contact-section" id="contactsection">
  <div class="container mx-auto">
    <p class="heading-text text-center mb-4 wow animated zoomIn">
      Connect <span class="primary-color">with us</span>
    </p>
    <p class="text-center my-3 wow animated zoomIn"
      style="max-width: 750px; margin: auto; line-height: 1.4; font-size: 14px;">
      Whatsoever may be your necessity - be it a simple website design, an intricate data driven web application
      development, an ecommerce website, a native or cross platform mobile app development, a logo and brand identity
      design, a video production or a full-fledged digital marketing campaign - we have a resolution for you.
    </p>
    <div class="d-flex align-items-center gap-3 mt-5 consultant-div bg-light">
      <div class="d-none d-sm-block wow animated slideInLeft">
        <%= image_tag('theme1/website design/precious/Hire Us/form2.png', class: 'consultant-img' ,
          style: 'object-fit: contain; padding-block: 20px;' , alt: '' ) %>
      </div>
      <div class="p-3 px-sm-5 wow animated slideInRight">
        <%= form_with url: theme1_home_contact_inquiry_path, local: true do |form| %>
        <div class="d-flex flex-column gap-3">
          <div>
            <%= form.label :fullname, "Full Name", class: "form-label" %> <span class="text-danger">*</span>
            <%= form.text_field :fullname, class: "form-control", required: true %>
          </div>
          <div class="d-flex flex-md-row flex-column gap-3">
            <div style="flex: 1;">
              <%= form.label :email, "Email", class: "form-label" %> <span class="text-danger">*</span>
              <%= form.email_field :email, class: "form-control", required: true %>
            </div>
            <div style="flex: 1;">
              <%= form.label :phone, "Phone Number", class: "form-label" %>
              <%= form.telephone_field :phone, class: "form-control" %>
            </div>
          </div>
          <div>
            <%= form.label :subject, "Subject", class: "form-label" %> <span class="text-danger">*</span>
            <%= form.select :subject, [
              ['Web Development', 'web_development'],
              ['App Development', 'app_development'],
              ['Graphic & UI/UX Design', 'graphic_ui_ux_design'],
              ['Digital Marketing', 'digital_marketing'],
              ['IT Consulting', 'it_consulting']
            ], { prompt: 'Select..' }, class: "form-select" %>
          </div>
          <div>
            <%= form.label :message, "Message", class: "form-label" %> <span class="text-danger">*</span>
            <%= form.text_area :message, class: "form-control", rows: 3, required: true %>
          </div>
          <div>
            <%= form.submit "Submit", class: "custom-btn text-center btn-md" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
